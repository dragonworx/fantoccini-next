{
  "source": {
    "include": ["./src/lib/core/", "./src/lib/metronome/"],
    "includePattern": "\\.(js|ts|tsx)$",
    "exclude": ["node_modules/", "dist/", "build/"]
  },
  "opts": {
    "destination": "./doc-gen/",
    "template": "node_modules/docdash",
    "recurse": true,
    "readme": "./README.md"
  },
  "plugins": ["node_modules/better-docs/typescript"],
  "tags": {
    "allowUnknownTags": ["optional"]
  },
  "typescript": {
    "moduleRoot": "./src/"
  },
  "docdash": {
    "static": true,
    "sort": true,
    "sectionOrder": [
      "Classes",
      "Modules", 
      "Externals",
      "Events",
      "Namespaces",
      "Mixins",
      "Tutorials",
      "Interfaces"
    ],
    "search": true,
    "collapse": false,
    "typedefs": true,
    "removeQuotes": "none",
    "scripts": [],
    "menu": {
      "GitHub": {
        "href": "https://github.com/your-username/fantoccini",
        "target": "_blank",
        "class": "menu-item",
        "id": "github_link"
      }
    }
  }
}